<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-offset-3">
        <h1 class="text-conter">Add Comment</h1>
        <%= form_for @comment do|f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :description, class: "form-contral"%>
            <%= f.hidden_field :topic_id, value: @comment.topic_id %>
            
          </div>
          <%= f.submit 'コメントする', class: "btn btn-block btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>